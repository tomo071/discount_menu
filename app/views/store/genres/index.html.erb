<div class="container">
  <div class="row">
    <div class="col-4">
      <div>
        <%= form_with model: @genre, url:store_genres_path do |f|%>
          <%= f.text_field :name %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
    <div class="col-8">
      <div>
        <% @genres.each do |genre| %>
          <%= genre.name %>
        <% end %>
      </div>
    </div>
  </div>
</div>