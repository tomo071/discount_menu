<div class="container">
  <div class="row">
    <div class="col-12">
      <% @store.each do  |store|%>
        <%= store.store_name %>
        <%= store.introduction %>
        <%= store.email %>
        <% if store.approval %>
          <p>許可済</p>
        <% else %>
          <p>許可されていません</p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>